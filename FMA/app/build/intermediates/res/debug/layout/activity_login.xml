<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <EditText
    android:hint="@string/usernamehint"
    android:gravity="center"
    android:layout_width="200dp"
    android:layout_height="50dp"
   android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/ovalborder"
    android:id="@+id/usernameVal"/>

    <EditText
        android:hint="@string/passwordhint"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ovalborder"
        android:id="@+id/passwordVal"
        android:layout_below="@+id/usernameVal"
        android:layout_marginTop="15dp"/>

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/buttonlayout"
     android:layout_below="@+id/passwordVal"
     android:layout_centerHorizontal="true">
     <Button
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:text="  Login  "
         android:textColor="#ffffff"
         android:layout_marginTop="15dp"
         android:background="@drawable/custom_btn_genoa"

         android:id="@+id/loginbtn"/>

     <Button
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:text="  Clear  "
         android:layout_marginTop="15dp"
         android:background="@drawable/custom_btn_orange"
         android:id="@+id/clrBtn"
         android:layout_toRightOf="@+id/loginbtn"
         android:layout_marginLeft="15dp"/>

     </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkforremember"
        android:layout_centerHorizontal="true"
        android:text="@string/remember"
        android:layout_below="@id/buttonlayout"/>


</RelativeLayout>
